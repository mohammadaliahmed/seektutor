<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tutor.seektutor">

    <application
        android:name="com.tutor.seektutor.Utils.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tutor.seektutor.Students.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"

            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name="com.tutor.seektutor.Activities.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tutor.seektutor.UserManagement.Login" />
        <activity android:name="com.tutor.seektutor.UserManagement.RegisterStudent" />
        <activity android:name="com.tutor.seektutor.Activities.NotificationsList" />
        <activity android:name="com.tutor.seektutor.Students.AddSubjectsToStudy" />
        <activity
            android:name="com.tutor.seektutor.Students.ViewStudent"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.tutor.seektutor.Students.StudentList" />
        <activity android:name="com.tutor.seektutor.Tutor.AddSubjectsToTeach" />
        <activity android:name="com.tutor.seektutor.Tutor.AddExperience" />
        <activity android:name="com.tutor.seektutor.Tutor.AddEducation" />
        <activity android:name="com.tutor.seektutor.Tutor.TutorRatings" />
        <activity android:name="com.tutor.seektutor.Students.MyRatings" />
        <activity android:name="com.tutor.seektutor.Students.StudentContactSelectionScreen" />
        <activity android:name=".Tutor.EditTutor" />
        <activity android:name=".Students.StudentProfile" />
        <activity android:name=".Tutor.TutorProfile" />
        <activity android:name=".Students.EditStudent" />
        <activity android:name="com.tutor.seektutor.Tutor.TutorContactSelectionScreen" />
        <activity
            android:name="com.tutor.seektutor.Tutor.ViewTutor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.tutor.seektutor.UserManagement.RegisterTutor" />
        <activity android:name="com.tutor.seektutor.Tutor.TutorsList" />
        <activity
            android:name="com.tutor.seektutor.Tutor.TutorMainActivity"
            android:label="@string/title_activity_tutor_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden"></activity>

        <service android:name="com.tutor.seektutor.Utils.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.tutor.seektutor.Utils.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>